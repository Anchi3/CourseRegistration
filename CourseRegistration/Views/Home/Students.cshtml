
@{
    ViewData["Title"] = "Students";
}

<style>
    body {
        background-color: lavenderblush;
        font-weight: 800;
    }
</style>

<h1>Students</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email Address</th>
            <th>Phone Number</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in @Model.Students)
        {
            <tr>
                <th scope="row">@item.StudentId</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
            </tr>
        }
    </tbody>
</table>
